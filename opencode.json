{
  "$schema": "https://opencode.ai/config.json",
  "share": "manual",
  "autoupdate": true,
  "compaction": {
    "auto": true,
    "prune": true
  },
  "permission": {
    "write": "ask",
    "edit": "allow",
    "bash": "ask",
    "skill": {
      "*": "allow"
    }
  },
  "watcher": {
    "ignore": [
      ".gradle/**",
      "build/**",
      ".git/**",
      "*.log",
      ".idea/**",
      "*.iml",
      "gradle/wrapper/gradle-wrapper.jar"
    ]
  }
}
